.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to 'railcross', root_path, :class => 'brand'

      - if admin_signed_in?      
        %ul.nav.pull-right
          %li.dropdown#account
            %a{ :href=>"#account", :class => "dropdown-toggle", 'data-toggle' => "dropdown" } 
              %i{ :class => "icon-user icon-white" }
              = current_admin.email
              %b.caret
            %ul.dropdown-menu
              %li
                = link_to 'Settings', edit_admin_registration_path
              %li
                = link_to 'Logout', destroy_admin_session_path, :method => :delete 


